package Nmer5;

import java.util.Scanner;

public class Завдання3 {
	 public static void main(String[] args) {
	        int n;
	        Scanner input = new Scanner (System.in);
	        System.out.println("Ведіть номер дня тижня: ");
	        n = input.nextInt();
	        switch(n){
	            case 1: System.out.println("Понеділок");
	                break;
	            case 2: System.out.println("Вівторок");
	                break;
	            case 3: System.out.println("Середа");
	                break;
	            case 4: System.out.println("Четверг");
	                break;
	            case 5: System.out.println("П'ятница");
	                break;
	            case 6: System.out.println("Субота");
	                break;
	            case 7: System.out.println("Неділя");
	                break;
	        }
	    }
	}
